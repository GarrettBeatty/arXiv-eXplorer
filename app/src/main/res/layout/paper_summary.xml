<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/paper_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:textColor="@color/primary_text" />

    <katex.hourglass.in.mathlib.MathView
        android:id="@+id/paper_title_latex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:setClickable="true"
        app:setTextColor="@color/primary_text"
        app:setTextSize="13sp" />

    <TextView
        android:id="@+id/paper_authors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
        android:textColor="@color/secondary_text" />


    <TextView
        android:id="@+id/paper_updated_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/paper_published_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/paper_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:textColor="@color/accent" />

    <View
        android:id="@+id/summary_sep"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/paper_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        android:textColor="@color/primary_text"
        android:visibility="gone" />

    <!--<io.github.kexanie.library.MathView-->
    <!--android:id="@+id/paper_summary_latex"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--auto:engine="KaTeX"-->
    <!--android:visibility="gone"-->
    <!--&gt;-->
    <!--</io.github.kexanie.library.MathView>-->

    <katex.hourglass.in.mathlib.MathView
        android:id="@+id/paper_summary_latex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:setClickable="true"
        app:setTextColor="@color/primary_text"
        app:setTextSize="9sp" />


</LinearLayout>